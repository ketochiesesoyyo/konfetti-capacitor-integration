---
interface Props {
	title?: string;
	description?: string;
	buttonText?: string;
	buttonUrl?: string;
}

const {
	title = 'Conoce gente nueva en la próxima boda',
	description = 'Konfetti te conecta con otros invitados antes del gran día. Descubre quién más va a la boda y empieza a socializar antes de llegar.',
	buttonText = 'Descarga Konfetti',
	buttonUrl = 'https://konfetti.app',
} = Astro.props;
---

<div class="rounded-bloom p-6 sm:p-8 text-center shadow-soft border border-konfetti-100" style="background: linear-gradient(135deg, hsl(282, 82%, 97%) 0%, hsl(300, 60%, 97%) 50%, hsl(20, 60%, 97%) 100%)">
	<h3 class="text-xl sm:text-2xl font-serif font-bold mb-3" style="color: hsl(345, 25%, 20%)">
		{title}
	</h3>
	<p class="text-muted-foreground mb-5 max-w-lg mx-auto">
		{description}
	</p>
	<a
		href={buttonUrl}
		target="_blank"
		rel="noopener noreferrer"
		class="no-underline inline-block gradient-primary text-white font-semibold px-8 py-3 rounded-2xl shadow-card hover:shadow-card-hover hover:scale-[1.02] active:scale-[0.98] transition-all duration-300"
	>
		{buttonText}
	</a>
</div>
