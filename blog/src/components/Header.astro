---
const navLinks = [
	{ href: '/?category=invitados', label: 'Invitados' },
	{ href: '/?category=parejas', label: 'Parejas' },
	{ href: '/?category=wedding-planners', label: 'Planners' },
	{ href: 'https://konfetti.app', label: 'Descargar App', external: true },
];
---

<header class="border-b border-border/50 bg-white/95 backdrop-blur-md sticky top-0 z-50">
	<div class="max-w-6xl mx-auto px-4 sm:px-6 h-16 flex items-center justify-between">
		<!-- Logo -->
		<a href="/" class="flex items-center group">
			<img src="/konfetti-blog-logo.png" alt="Konfetti Blog" class="h-8 sm:h-9" />
		</a>

		<!-- Desktop Nav -->
		<nav class="hidden md:flex items-center gap-1">
			{navLinks.map(link => (
				<a
					href={link.href}
					class:list={[
						'text-sm font-medium px-4 py-2 rounded-2xl transition-all duration-300',
						link.external
							? 'gradient-primary text-white shadow-soft hover:shadow-card hover:scale-[1.02] active:scale-[0.98]'
							: 'text-muted-foreground hover:bg-konfetti-50 hover:text-konfetti-600',
					]}
					{...(link.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
				>
					{link.label}
				</a>
			))}
		</nav>

		<!-- Mobile menu button -->
		<button
			id="mobile-menu-btn"
			class="md:hidden p-2 rounded-2xl text-muted-foreground hover:bg-konfetti-50 hover:text-konfetti-600 transition-all duration-300"
			aria-label="Abrir menu"
		>
			<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
			</svg>
		</button>
	</div>

	<!-- Mobile Nav -->
	<nav id="mobile-menu" class="hidden md:hidden border-t border-border/50 bg-white/95 backdrop-blur-md">
		<div class="px-4 py-4 flex flex-col gap-1">
			{navLinks.map(link => (
				<a
					href={link.href}
					class:list={[
						'text-sm font-medium py-2.5 px-4 rounded-2xl transition-all duration-300',
						link.external
							? 'gradient-primary text-white text-center shadow-soft mt-2'
							: 'text-muted-foreground hover:bg-konfetti-50 hover:text-konfetti-600',
					]}
					{...(link.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
				>
					{link.label}
				</a>
			))}
		</div>
	</nav>
</header>

<script>
	const btn = document.getElementById('mobile-menu-btn');
	const menu = document.getElementById('mobile-menu');
	btn?.addEventListener('click', () => {
		menu?.classList.toggle('hidden');
	});
</script>
