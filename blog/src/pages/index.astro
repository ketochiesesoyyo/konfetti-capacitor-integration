---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';

const now = new Date();
const allPosts = (await getCollection('blog', ({ data }) => !data.draft && data.pubDate <= now))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const categories = [
	{ value: '', label: 'Todos' },
	{ value: 'invitados', label: 'Invitados' },
	{ value: 'parejas', label: 'Parejas' },
	{ value: 'wedding-planners', label: 'Planners' },
	{ value: 'tendencias', label: 'Tendencias' },
	{ value: 'historias', label: 'Historias' },
];
---

<BaseLayout
	title="Blog Konfetti"
	description="Consejos para socializar en bodas, tendencias en celebraciones y todo sobre conocer gente nueva en el evento mas especial del ano."
>
	<!-- Hero -->
	<section class="gradient-hero py-12 sm:py-16">
		<div class="max-w-6xl mx-auto px-4 sm:px-6 text-center animate-fade-in">
			<h1 class="text-4xl sm:text-5xl font-serif font-bold mb-4" style="color: hsl(345, 25%, 20%)">
				Blog <span class="text-konfetti-600">Konfetti</span>
			</h1>
			<p class="text-lg text-muted-foreground max-w-2xl mx-auto">
				Consejos para socializar en bodas, tendencias en celebraciones y todo sobre conocer gente nueva en el evento mas especial del ano.
			</p>
		</div>
	</section>

	<!-- Category filters -->
	<section class="max-w-6xl mx-auto px-4 sm:px-6 py-6">
		<div class="flex flex-wrap gap-2 justify-center" id="category-filters">
			{categories.map(cat => (
				<button
					data-category={cat.value}
					class:list={[
						'px-5 py-2 rounded-2xl text-sm font-medium transition-all duration-300 category-btn',
						cat.value === ''
							? 'gradient-primary text-white shadow-soft'
							: 'bg-white text-muted-foreground border border-border/50 shadow-xs hover:shadow-soft hover:border-konfetti-200 hover:text-konfetti-600',
					]}
				>
					{cat.label}
				</button>
			))}
		</div>
	</section>

	<!-- Post grid -->
	<section class="max-w-6xl mx-auto px-4 sm:px-6 pb-16">
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="posts-grid">
			{allPosts.map(post => (
				<div data-category={post.data.category} class="post-item animate-slide-up">
					<PostCard
						title={post.data.title}
						description={post.data.description}
						pubDate={post.data.pubDate}
						heroImage={post.data.heroImage}
						category={post.data.category}
						slug={post.id}
					/>
				</div>
			))}
		</div>

		{allPosts.length === 0 && (
			<p class="text-center text-muted-foreground py-12">No hay articulos todavia. Vuelve pronto.</p>
		)}
	</section>
</BaseLayout>

<script>
	function setupFilters() {
		const buttons = document.querySelectorAll('.category-btn');
		const posts = document.querySelectorAll('.post-item');

		// Check URL for initial category
		const params = new URLSearchParams(window.location.search);
		const initialCategory = params.get('category') || '';

		function filterPosts(category: string) {
			buttons.forEach(btn => {
				const btnCat = (btn as HTMLElement).dataset.category;
				if (btnCat === category) {
					btn.className = 'px-5 py-2 rounded-2xl text-sm font-medium transition-all duration-300 category-btn gradient-primary text-white shadow-soft';
				} else {
					btn.className = 'px-5 py-2 rounded-2xl text-sm font-medium transition-all duration-300 category-btn bg-white text-muted-foreground border border-border/50 shadow-xs hover:shadow-soft hover:border-konfetti-200 hover:text-konfetti-600';
				}
			});

			posts.forEach(post => {
				const postCat = (post as HTMLElement).dataset.category;
				if (!category || postCat === category) {
					(post as HTMLElement).style.display = '';
				} else {
					(post as HTMLElement).style.display = 'none';
				}
			});
		}

		buttons.forEach(btn => {
			btn.addEventListener('click', () => {
				const category = (btn as HTMLElement).dataset.category || '';
				filterPosts(category);
				const url = new URL(window.location.href);
				if (category) {
					url.searchParams.set('category', category);
				} else {
					url.searchParams.delete('category');
				}
				window.history.replaceState({}, '', url);
			});
		});

		if (initialCategory) {
			filterPosts(initialCategory);
		}
	}

	setupFilters();
</script>
